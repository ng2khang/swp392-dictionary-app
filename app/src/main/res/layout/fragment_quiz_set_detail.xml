<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuizSetDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Toolbar với mũi tên back -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_quiz_set_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Quiz Set Detail"
            app:navigationIcon="@drawable/baseline_arrow_back_24" />

        <!-- Thanh các nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <Button
                android:id="@+id/btn_do_quiz"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Do this quiz" />
            <Button
                android:id="@+id/btn_delete_quiz_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Remove quiz" />
            <Button
                android:id="@+id/btn_edit_quiz_info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit detail" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layout_quiz_set_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/tv_quiz_set_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quiz Set Name"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_quiz_set_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quiz Set Description"
                        android:textSize="16sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tv_quiz_set_info_extra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total question: ? | Time: ? phút"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_question" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Change"
            android:layout_margin="16dp" />
    </LinearLayout>


</FrameLayout>